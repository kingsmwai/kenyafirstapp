<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.emobilis.firstapp">
    <!-- write permissions -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_format_bold_black_24dp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_format_bold_black_24dp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name=".FragmentCommunication_ShareModel"></activity>
        <activity android:name=".FragmentCommunication_Interface" />
        <activity android:name=".CustomListView" />
        <activity android:name=".SharedPrefActivity" />
        <activity android:name=".ImageActivity" />
        <activity android:name=".ListActivity" />
        <activity android:name=".SQLiteActivity" />
        <activity android:name=".CardDescription" />
        <activity android:name=".TabActivity" />
        <activity android:name=".IntroSlider" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RecyclerActivity" />
        <activity android:name=".BottomNaviagtion" />
        <activity android:name=".NavigationActivity" />
        <activity android:name=".LifecycleActivity" />
        <activity android:name=".SecondActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>